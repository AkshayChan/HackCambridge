<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.akshayc.studenteats">

    <application
        android:allowBackup="true"
        android:icon="@drawable/home_image"
        android:label="Good Eats"
        android:roundIcon="@drawable/home_image"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Good Eats">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PreferencesActivity"
            android:label="Your Preferences" />
        <activity
            android:name=".RecipeActivity"
            android:label="Your Recipe" />
        <activity android:name=".ShopListActivity"
            android:label="Shopping List"></activity>
    </application>

</manifest>